<?xml version="1.0" encoding="UTF-8"?>

<Context>

	<JarScanner scanClassPath="false" />
	<CookieProcessor sameSiteCookies="lax" /> <!-- Para cumplir con OWASP -->
	
	<!-- 
	Para definir el acceso a tu base de datos descomenta una de las
	configuraciones de abajo. Si no encuentras la tuya, busca en internet
	la URL para tu base de datos y define tu propia entrada Resource.
	
	Has de adaptar la URL a tu propio servidor, quizás también el puerto.
	Has de define el usuario y contraseña correctos para tu base de datos.
	
	Además, has de añadir la dependencia al controlador JDBC 
	correspodiente a tu base de datos al pom.xml de tu proyecto.	
	-->
	 
	<!-- HSQLDB
    <Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="sa" password="" 
	      driverClassName="org.hsqldb.jdbc.JDBCDriver"
	      url="jdbc:hsqldb:hsql://localhost:1666"/>-->

	<!-- MySQL
	<Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="root" password="" 
	      driverClassName="com.mysql.cj.jdbc.Driver"
	      url="jdbc:mysql://localhost:3306/EjemploBD2db"/>
	-->
	
	<!-- PostgreSQL
	<Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="postgres" password="123"
	      driverClassName="org.postgresql.Driver" 
	      url="jdbc:postgresql://localhost/prueba"/>
	-->
	
	<!-- Oracle 
	<Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="user" password="" 
	      driverClassName="oracle.jdbc.OracleDriver"
	      url="jdbc:oracle:thin:@localhost:1521:EjemploBD2db"/>
	-->	
	
	<!-- AS/400 
	<Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="user" password="" 
	      driverClassName="com.ibm.as400.access.AS400JDBCDriver" 
	      url="jdbc:as400:localhost/EjemploBD2lib"/>
	-->
	
	<!-- Microsoft SQL Server-->
	<Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
			  maxTotal="20" maxIdle="5" maxWaitMillis="10000"
			  username="sa" password="123"
			  driverClassName="com.microsoft.sqlserver.jdbc.SQLServerDriver"
			  url="jdbc:sqlserver://localhost:1435;databaseName=prueba;encrypt=true;trustServerCertificate=true"/>

	
	<!-- Informix
	<Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="user" password="" 
	      driverClassName="com.informix.jdbc.IfxDriver"
	      url="jdbc:informix-sqli://localhost:1533/EjemploBD2db:INFORMIXSERVER=tuservidor"/>
	-->            
	
	<!-- Db2
	<Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="user" password="" 
	      driverClassName="com.ibm.db2.jcc.DB2Driver"
	      url="jdbc:db2://localhost:50000/EjemploBD2db"/>
	-->
	
	<!-- Firebird
	<Resource name="jdbc/EjemploBD2DS" auth="Container" type="javax.sql.DataSource"
	      maxTotal="20" maxIdle="5" maxWaitMillis="10000"
	      username="user" password="" 
	      driverClassName="org.firebirdsql.jdbc.FBDriver"
	      url="jdbc:firebirdsql://localhost:3050/c:/db/EjemploBD2.fdb"/>
	-->
	                  	      
</Context>
